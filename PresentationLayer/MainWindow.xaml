<Window x:Class="EP_HSRlearnIT.PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EP_HSRlearnIT.PresentationLayer"
        mc:Ignorable="d"
       Icon="images/icon.png"
    Title="MainWindow" Height="500" Width="700">
    <Grid>
        <StackPanel Name="MenuStackPanel" Width="200" HorizontalAlignment="Left" Visibility="Hidden" Background="White" Panel.ZIndex="2">
                <TextBox Text="Menu" Style="{StaticResource ResourceKey=MenuStyle}"/>
                <ListView Name="Menu" ItemsSource="{StaticResource ResourceKey=MenuStrings}" MouseDoubleClick="ListBoxItem_MouseDoubleClick"
                      ItemContainerStyle="{StaticResource ResourceKey=ItemStyle}" BorderThickness="0"/>
            </StackPanel>

        <Button x:Name="MenuButton" Content=">>" Height="30" Click="OnMenuButton_Click"
                VerticalAlignment="Top" HorizontalAlignment="Left" Width="20"
                Panel.ZIndex="2"/>
        <Button x:Name="BackButton" Content="Zurück" Height="30" Click="OnBackButton_Click"
                VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"
                Margin="50, 0, 0, 0"/>
        <Button x:Name="ForwardButton" Content="Weiter" Height="30" Click="OnForwardButton_Click"
                VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"
                Margin="120, 0, 0, 0"/>
        <Button x:Name="Save" Content="Speichern" Height="30" Click="OnSaveButton_Click" MouseRightButtonDown="OnExceptionClick"
                VerticalAlignment="Top" HorizontalAlignment="Right" Width="50"
                Margin="0, 0, 50, 0"/>
        <Frame x:Name="MainFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Panel.ZIndex="1" NavigationUIVisibility="Hidden" Margin="0, 50, 0, 0"/>
    </Grid>
</Window>
