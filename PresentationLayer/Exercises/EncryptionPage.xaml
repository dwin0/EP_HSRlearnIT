<base:CryptoClass x:Class="EP_HSRlearnIT.PresentationLayer.Exercises.EncryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:EP_HSRlearnIT.PresentationLayer.Exercises"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:base="clr-namespace:EP_HSRlearnIT.PresentationLayer.Exercises"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EncryptionPage">

    <Page.Resources>
        <local:FormFilledMulticonverter x:Key="FormFilledMultiConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" Name="Row0"/>
            <RowDefinition Height="Auto" Name="Row1"/>
            <RowDefinition Height="Auto" Name="Row2"/>
            <RowDefinition Height="*" Name="Row3"/>
            <RowDefinition Height="Auto" Name="Row4"/>
            <RowDefinition Height="*" Name="Row5"/>
            <RowDefinition Height="Auto" Name="Row6"/>
            <RowDefinition Height="Auto" Name="Row7"/>
            <RowDefinition Height="Auto" Name="Row8"/>
            <RowDefinition Height="Auto" Name="Row9"/>
            <RowDefinition Height="*" Name="Row10"/>
            <RowDefinition Height="Auto" Name="Row11"/>
            <RowDefinition Height="Auto" Name="Row12"/>
            <RowDefinition Height="Auto" Name="Row13"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="6" BorderBrush="Gray"  Background="LightGray" BorderThickness="2" Grid.ColumnSpan="1" Grid.RowSpan="14" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="IV: (optional)" Name="IvBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="1" Grid.Column="0" Name="IvBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Additional Authenticated Data: (optional)" Name="AadBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="3" Grid.Column="0" Name="AadBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Klartext:" Name="PlainTextBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="5" Grid.Column="0" Name="PlainTextBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Key:" Name="EncryptionPasswordBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="7" Grid.Column="0" Name="EncryptionPasswordBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
        <Button Grid.Row="8" Grid.Column="0" Click="OnEnryptionButtonClick" Content="Verschlüsseln" Name="EncryptionButton" Height="40" Width="85" HorizontalAlignment="Left" Margin="15,10,0,10" >
            <Button.IsEnabled>
                <MultiBinding Converter="{StaticResource FormFilledMultiConverter}">
                    <Binding Path="Text.Length" ElementName="IvBox"/>
                    <Binding Path="Text.Length" ElementName="PlainTextBox"/>
                    <Binding Path="Text.Length" ElementName="EncryptionPasswordBox"/>
                </MultiBinding>
            </Button.IsEnabled>
        </Button>
        <TextBlock Grid.Row="9" Grid.Column="0" Text="Verschlüsselter Text:" Name="CipherTextBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="10" Grid.Column="0" Name="CipherTextBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="11" Grid.Column="0" Text="Tag:" Name="TagBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="12" Grid.Column="0" Name="TagBox" TextChanged="TextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
        <DockPanel Grid.Row="13" Grid.Column="0" Margin="15,2,15,5">
            <Button Click="OnExportButtonClick" Content="Exportieren" Name="ExportButton" Height="40" Width="85" Margin="0,10,7.5,10"/>
            <Button Click="OnDecryptionButtonClick" Content="Entschlüsseln" Name="DecryptionButton" HorizontalAlignment="Left" Height="40" Width="85" Margin="7.5,10,0,10"/>
        </DockPanel>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="IV Hex:" Name="HexIvBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="HexIvBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Additional Authenticated Data: (optional)" Name="HexAadBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="HexAadBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="Klartext Hex:" Name="HexPlainTextBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="HexPlainTextBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="6" Grid.Column="1" Text="Key Hex:" Name="HexEncryptionPasswordBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="7" Grid.Column="1" Name="HexEncryptionPasswordBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
        <TextBlock Grid.Row="9" Grid.Column="1" Text="Verschlüsselter Text Hex:" Name="HexCipherTextBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="10" Grid.Column="1" Name="HexCipherTextBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="11" Grid.Column="1" Text="Tag Hex:" Name="HexTagBlock" Margin="15,2,15,0"/>
        <TextBox Grid.Row="12" Grid.Column="1" Name="HexTagBox" TextChanged="HexTextBox_TextChanged" TextWrapping="Wrap" Margin="15,2,15,5"/>
    </Grid>
</base:CryptoClass>