<Page x:Class="EP_HSRlearnIT.Windows.EncryptionDecyrptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EP_HSRlearnIT.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EncryptionDecyrptionPage">

    <Grid>
        <StackPanel Margin="50,70">
            <Button Click="Encryption_Click"  Content="Verschlüsselung" Name="Encryption"  Style="{StaticResource ResourceKey=MainButtonStyle}"/>
            <Button Click="Decryption_Click"  Content="Entschlüsselung" Name="Decryption"  Style="{StaticResource ResourceKey=MainButtonStyle}"/>
        </StackPanel>
        
    </Grid>
</Page>
