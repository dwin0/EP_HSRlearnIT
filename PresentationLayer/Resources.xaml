<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:EP_HSRlearnIT.PresentationLayer" >

    <!--
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Tutorials/PathRessources.xaml" />
        <ResourceDictionary Source="/TutorialsResources.xaml" />
        <ResourceDictionary Source="Exercises/ExerciseRessources.xaml"/>
    </ResourceDictionary.MergedDictionaries>
-->
    
    <!--MainWindow and MainPage-->
    
    <local:StringCollection x:Key="MenuStrings">
        <system:String>Startseite</system:String>
        <system:String>AES-GCM Übersicht</system:String>
        <system:String>Schritt für Schritt</system:String>
        <system:String>Ver- und Entschlüsselung</system:String>
        <system:String>Drag- und Drop Spiel</system:String>
    </local:StringCollection>
    
    <Brush x:Key="MenuBackgroundColor">#ffe6e6</Brush>

    <Storyboard x:Key="SbShowLeftMenu" >
        <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-150, -10, 0, 0" To="-50, -10, 0, 0" DecelerationRatio="0.9" Duration="0:0:0.5"/>
    </Storyboard>

    
    <!-- Styles-->
    
    <Style x:Key="MainButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Padding" Value="10, 2"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style x:Key="ProgramButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="130"/>
    </Style>

    <Style x:Key="MenuStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Background" Value="#990000"/>
        <Setter Property="Padding" Value="40, 10, 10, 10"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="MenuItemStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="#ffe6e6"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>