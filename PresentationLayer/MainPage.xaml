<Page x:Class="EP_HSRlearnIT.PresentationLayer.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EP_HSRlearnIT.PresentationLayer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" 
      Title="MainPage">

    <Grid>
        <StackPanel Margin="50, 10, 50, 20">
            <Button Click="OverviewScreen_Click" Content="Übersicht AES GCM" Name="OverviewScreen" Style="{StaticResource ResourceKey=MainButtonStyle}"/>
            <Button Click="StepByStep_Click" Content="Schritt für Schritt Anleitung" Name="StepByStep" Style="{StaticResource ResourceKey=MainButtonStyle}"/>
            <Button Click="EncryptionDecryption_Click" Content="Ver- und Entschlüsselung" Name="EncryptionDecryption" Style="{StaticResource ResourceKey=MainButtonStyle}"/>
            <Button Click="DragAndDrop_Click" Content="Drag- und Drop - Spiel" Name="DragAndDrop" Style="{StaticResource ResourceKey=MainButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
