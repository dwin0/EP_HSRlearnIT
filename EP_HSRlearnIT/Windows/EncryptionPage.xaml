<Page x:Class="EP_HSRlearnIT.Windows.EncryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EP_HSRlearnIT.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EncryptionPage">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Klartext:"/>
            <TextBox Height="50" Margin="0, 10"  Name="PlainTextBox"/>
            <TextBlock Text="Passwort"/>
            <TextBox Name="EncryptionPasswordBox"/>
            <Button Click="OnEnryptionButtonClick" Content="Verschlüsseln" Name="EncryptionButton"/>
            <TextBlock Text="Verschlüsselter Text:"/>
            <TextBox Height="50" Margin="0, 10" Name="CipherTextBox"/>
            <TextBlock Text="Passwort"/>
            <TextBox Name="DecryptionPasswordBox"/>
            <Button Click="OnDecryptionButtonClick" Content="Entschlüsseln" Name="DecryptionButton"/>
        </StackPanel>
    </Grid>
</Page>
