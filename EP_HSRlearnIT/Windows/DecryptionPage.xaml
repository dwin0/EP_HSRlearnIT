<Page x:Class="EP_HSRlearnIT.Windows.DecryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EP_HSRlearnIT.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DecryptionPage">

    <Grid>
        <StackPanel Margin="50,10,50,10">
            <TextBlock Text="Verschlüsselter Text:"/>
            <TextBox Height="50" Name="CipherTextBox" Margin="0,0,0,10"/>
            <DockPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center"/>
                <Button Content="File Importieren" Name="ImportButton" Height="40" Width="90" Margin="2"/>
                <Button Content="Entschlüsseln" Name="DecryptionButton" Height="40" Width="90" Margin="2"/>
                <Button Content="Verschlüsseln" Name="EncrpytionButton" Height="40" Width="90" Margin="2" HorizontalAlignment="Left"/>
            </DockPanel>
            <TextBlock Text="Passwort:" Margin="0,10,0,0"/>
            <TextBox Name="DecryptionPasswordBox" Height="20"/>
            <TextBlock Text="Tag:" Margin="0,10,0,0"/>
            <TextBox Name="TagBox" Height="20"/>
            <TextBlock Text="Klartext:" Margin="0,10,0,0"/>
            <TextBox Height="50" Name="PlainTextBox"/>
        </StackPanel>
    </Grid>
</Page>
